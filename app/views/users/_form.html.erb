<table id="table_style">
	<tr>
		<td>First Name : </td>
		<td><%= text_field :user, :first_name, :size => "30" %></td>
	</tr>
	<tr>
		<td>Last Name : </td>
		<td><%= text_field :user, :last_name, :size => "30" %></td>
	</tr>
	<tr>
		<td>Email :</td>
		<td><%= text_field :user, :email, :size => "30" %></td>
	</tr>
	<tr>
		<td>DOB :</td>
		<td><%= text_field :user, :dob, :size => "8", :class => "datepicker" %></td>
	</tr>

	<tr>
	    <td>Group :</td>
	    <td>
	    <% for group in Group.order("name")%>
	      <%= check_box "slected","groups", {:index => group.id, :checked => @user.groups.include?(group), :disabled => @user.groups.include?(group)}, true, false %><%= group.name %>
	      </br>
	    <% end %>
	    </td>
	</tr>	
	<tr>
		<td>Position :</td>
		<td><%= text_field :user, :position, :size => "30" %></td>
	</tr>
</table>	

