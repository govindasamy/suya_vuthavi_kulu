<div class="form-group">
  <label for="event-name">Event Name</label>
  <%= text_field :event, :name, :style => "max-width: 300px;", :class => "form-control", :placeholder => "Enter event name" %>
</div>
<div class="form-group">
  <label for="description">Description:</label>
  <%= text_area :event, :description, :cols => 30, :rows => 4, :style => "max-width: 300px;", :class => "form-control", :placeholder => "Enter description" %>
</div>




