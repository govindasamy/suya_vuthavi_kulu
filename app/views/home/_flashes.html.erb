<div id="notice">
  <div id="notice_eve">
    <P>NOTICE BOARD</P>
    <marquee  behavior="scroll" direction="up">
      <ul>
        <%if Gallery.first %>
          <% Gallery.first.images.each do |image| %>
            <li><%= link_to image_tag(image.image_url(:thumb)), image.image_url, class: 'fancybox', rel: 'group', title: image.image, alt: 'Photo' %><li></li>>
          <% end %>
        <% end %>
      </ul>
    </marquee>
  </div>
  <div id="notice_sub">
    <P>NOTICE BOARD</P>
    <marquee  behavior="scroll" direction="up">
      <ul>
        <%if Gallery.first %>
          <% Gallery.last.images.each do |image| %>
            <li><%= link_to image_tag(image.image_url(:thumb)), image.image_url, class: 'fancybox', rel: 'group', title: image.image, alt: 'Photo' %><li></li>>
          <% end %>
        <% end %>
      </ul>
    </marquee>
  </div>
</div>