
<%= stylesheet_link_tag "jquery.fancybox.css" %>
<%= javascript_include_tag "jquery.mousewheel-3.0.6.pack.js" %>
<%= javascript_include_tag "jquery.fancybox.pack.js" %>


<%= form_for(:image, :url => create_image_galleries_path, :html=>{:multipart => true}, :method => "post") do |f| %>
  <%= file_field :image, :image%>
  <%= hidden_field :image, :gallery_id, :value => @gallery.id %>
  <%= submit_tag "Save" %>
<% end %>
</br>

<% @gallery.images.each do |image| %>
<%= link_to image_tag(image.image_url(:thumb)), image.image_url, class: 'fancybox', rel: 'group', title: image.image, alt: 'Photo' %>
<% end %>

<script>

  jQuery(function($) { // as soon as DOM is ready
	$(".fancybox").fancybox({ // initialize fancybox on all pages where it is present
	        helpers: {
	            title: {type: 'inside'},
	            buttons: {}
	        }
	    });
	});
</script>